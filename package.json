{
  "name": "axios-version",
  "description": "Validating service version from response headers for axios",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/axios-version/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size",
        "npm run secure"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/axios-version#readme",
  "keywords": [
    "axios",
    "request",
    "semver",
    "service",
    "validator",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/axios-version.git"
  },
  "scripts": {
    "format": "standard-format -w index.js src/*.js",
    "issues": "git-issues",
    "lint": "standard --verbose index.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "commit": "commit-wizard"
  },
  "devDependencies": {
    "git-issues": "1.2.0",
    "mocha": "2.4.5",
    "nsp": "2.2.1",
    "pre-git": "3.7.1",
    "standard": "6.0.8",
    "standard-format": "2.1.1"
  }
}
